<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_date_picker"
        android:layout_width="@dimen/dimen_250dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16dp"
        android:text="16-07-2025"
        app:icon="@drawable/ic_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_time_picker"
        android:layout_width="@dimen/dimen_250dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16dp"
        android:text="17.37"
        app:icon="@drawable/ic_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_date_picker" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_date_time_picker"
        android:layout_width="@dimen/dimen_250dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16dp"
        android:text="16-07-2025 17.37"
        app:icon="@drawable/ic_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_time_picker" />

    <TextView
        android:id="@+id/tv_date_picker"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16dp"
        android:text="Date Picker"
        android:textColor="@color/text"
        android:textSize="@dimen/ts16"
        app:layout_constraintBottom_toBottomOf="@id/btn_date_picker"
        app:layout_constraintEnd_toStartOf="@id/btn_date_picker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_date_picker" />

    <TextView
        android:id="@+id/tv_time_picker"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16dp"
        android:text="Time Picker"
        android:textColor="@color/text"
        android:textSize="@dimen/ts16"
        app:layout_constraintBottom_toBottomOf="@id/btn_time_picker"
        app:layout_constraintEnd_toStartOf="@id/btn_time_picker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_time_picker" />

    <TextView
        android:id="@+id/tv_date_time_picker"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16dp"
        android:text="Date Time Picker"
        android:textColor="@color/text"
        android:textSize="@dimen/ts16"
        app:layout_constraintBottom_toBottomOf="@id/btn_date_time_picker"
        app:layout_constraintEnd_toStartOf="@id/btn_date_time_picker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_date_time_picker" />


</androidx.constraintlayout.widget.ConstraintLayout>